*{
	color0: #27232399;
	color1: #d8dee9;
	color2: #4c566a29;
	color3: #a3be8c;
	background-color: transparent;
	text-color: @color1;
}

configuration {
	show-icons: true;
	icon-theme: "Papirus";
	font: "FiraCode 12";
}

window {
	fullscreen: true; 
	background-color: @color0;
	height: 50%;
	border-radius: 5px;
}

prompt {
	enabled: false;
}

case-indicator {
	enabled: false;
}

inputbar {
	padding: 50px 600px;
}

entry{
	placeholder: "Search Apps";
	background-color: @color2;
	padding: 18px;
	margin: 15px 0;
	border-radius: 20px;
}

listview {
	flow: horizontal;	
	columns: 4;
	lines: 4;
}

element,element-text,element-icon {
	cursor: pointer;
}

element {
	orientation: vertical;
	padding:10px;
	margin: 20px 100px;
}

element selected {
	background-color: @color2;
	border-radius: 20px;
}

element-icon {
	size: 3em;
	padding: 12px;
}

element-text {
	horizontal-align: 0.5;
}
